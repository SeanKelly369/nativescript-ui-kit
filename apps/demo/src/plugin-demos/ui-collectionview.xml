<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page" xmlns:cv="@nstudio/ui-collectionview">
    <Page.actionBar>
        <ActionBar title="ui-collectionview" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <GridLayout>
        <cv:CollectionView items="{{items}}" colWidth="50%" rowHeight="100" layoutStyle="headers">
            <cv:CollectionView.itemTemplate>
              <GridLayout backgroundColor="{{color}}">
                <Label text="{{name}}" class="text-center"/>
                  
              </GridLayout>
            </cv:CollectionView.itemTemplate>
            <!-- <cv:CollectionView.headerItemTemplate>
              <GridLayout backgroundColor="#efefef">
                <Label text="HEADER" class="text-center"/>
              </GridLayout>
            </cv:CollectionView.headerItemTemplate> -->
        </cv:CollectionView>
    </GridLayout>
</Page>