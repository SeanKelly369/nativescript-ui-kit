        <!--itemTemplateSelector="{{itemTemplateSelector}}"-->
        <cv:CollectionView items="{{items}}" colWidth="100%" layoutStyle="swipe" headerPinned="{{true}}" loaded="{{loadedCollectionView}}">
          <cv:CollectionView.headerItemTemplate>
              <GridLayout backgroundColor="#efefef" height="40">
                <GridLayout rows="" columns="*,auto,auto,auto,auto,auto,auto,*">
                    <Label col="1" text="Load" tap="{{loadItems}}" class="m-x-4" />
                    <Label col="2" text="Update" tap="{{updateItem}}" class="m-x-4" />
                    <Label col="3" text="Delete" tap="{{removeItem}}" class="m-x-4" />
                    <Label col="4" text="Delete/R" tap="{{removeItemAndReplace}}" class="m-x-4" />
                    <Label col="5" text="Add" tap="{{addItem}}" class="m-x-4" />
                    <Label col="6" text="Reload" tap="{{reload}}" class="m-x-4" />
                </GridLayout>
              </GridLayout>
            </cv:CollectionView.headerItemTemplate>
            <cv:CollectionView.footerItemTemplate>
              <GridLayout backgroundColor="yellow">
                <Label text="FOOTER" class="text-center"/>
              </GridLayout>
            </cv:CollectionView.footerItemTemplate>
