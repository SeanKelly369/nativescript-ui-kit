<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page"
  xmlns:ui="@nstudio/nativescript-rive">
  <Page.actionBar>
    <ActionBar title="nativescript-rive" icon="" class="action-bar">
    </ActionBar>
  </Page.actionBar>
  <StackLayout class="p-20">
    <ScrollView class="h-full">
      <StackLayout>
        <ui:RiveView src="~/assets/rive/compass" width="200" height="200" autoPlay="true" onStateChanged="{{onStateChanged}}" loaded="{{loadedPlayer}}" />

        <Button text="{{playing ? 'Stop' : 'Play'}}" tap="{{togglePlay}}" horizontalAlignment="center" verticalAlignment="center"></Button>
      </StackLayout>
    </ScrollView>
  </StackLayout>
</Page>