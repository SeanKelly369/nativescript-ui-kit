        </StackLayout>
      </ui:AutoLayout>
      <ui:AutoLayout position="bottom">
        <StackLayout backgroundColor="#efefef">
          <ScrollView>
            <StackLayout rows="" columns="">
              <Label text="test" textWrap="true" fontSize="45" marginTop="10" />
