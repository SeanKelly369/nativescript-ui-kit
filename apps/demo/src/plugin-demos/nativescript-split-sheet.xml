              <Label text="test" textWrap="true" fontSize="45" marginTop="10" />
              <Label text="test" textWrap="true" fontSize="45" marginTop="10" />
              <Label text="test" textWrap="true" fontSize="45" marginTop="10" />
              <Label text="test" textWrap="true" fontSize="45" marginTop="10" />
              <Label text="test" textWrap="true" fontSize="45" marginTop="10" />
              <Label text="test" textWrap="true" fontSize="45" marginTop="10" />
              <Label text="test" textWrap="true" fontSize="45" marginTop="10" />
            </StackLayout>
          </ScrollView>
        </StackLayout>
      </ui:AutoLayout>
    </ui:SplitSheet>
  </RootLayout>
</Page>